<h1>Listing All People</h1>

<%= link_to 'New person', new_person_path %>
<%= link_to 'Display All People', "people/display" %>
<br />
<br />

<table>
  <tr>
    <th class="BorderDraw">Name</th>
    <th class="BorderDraw">Height(cm)</th>
    <th class="BorderDraw">Weight(kg)</th>
    <th class="BorderDraw">Age</th>
    <th class="BorderDraw">Gender</th>
    <th class="BorderDraw">Ethnicity</th>
    <th></th>
    <th>Options</th>
    <th colspan="3"></th>
  </tr>
 
  <% @people.each do |person| %>
    <tr style=<%= "color:rgb(" + person.red.to_s + "," + person.green.to_s + "," + person.blue.to_s + ");" %> > <!-- This isn't working still, should change the text colour //-->
      <td><%= person.name %></td>
      <td><%= person.height %></td>
      <td><%= person.weight %></td>
      <td><%= person.age %></td>
      <td><%= person.gender %></td>
      <td><%= person.ethnicity %></td>
      <td><%= link_to 'Show', person_path(person) %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person_path(person),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>